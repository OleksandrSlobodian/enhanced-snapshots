# For more information on configuration, see:
# Official English Documentation: http://nginx.org/en/docs/
# Official Russian Documentation: http://nginx.org/ru/docs/

user  nginx;
worker_processes  1;

error_log  /var/log/nginx/error.log;
#error_log  /var/log/nginx/error.log  notice;
#error_log  /var/log/nginx/error.log  info;

pid        /var/run/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;

    index   index.html index.htm;

	upstream snapdirector {
		server localhost:8080;
	}

	server {

		listen      80;
		return 301  https://$host$request_uri;
	}


	server {

		listen 443;

		ssl on;
		ssl_certificate     /etc/nginx/cert.crt;
		ssl_certificate_key /etc/nginx/cert.key;

		client_max_body_size 100M;

		location / {
			proxy_pass                 http://snapdirector;
			proxy_set_header           X-Forwarded-Host   $host;
			proxy_set_header           X-Forwarded-Server $host;
			proxy_set_header           X-Forwarded-For    $proxy_add_x_forwarded_for;
			proxy_set_header           X-Forwarded-Proto  https;
			proxy_set_header           Host               $host;
			proxy_http_version 				1.1;
			proxy_set_header 	   Upgrade    $http_upgrade;
			proxy_set_header 	   Connection 	  "upgrade";

			proxy_redirect             off;
			proxy_connect_timeout      420;
			proxy_send_timeout         420;
			proxy_read_timeout         420;

			# Show error pages from ?? when down
			# proxy_next_upstream error timeout http_502 http_503 http_504;
			# error_page   502 503 504   https://put error page url here;
		}
	}

}
